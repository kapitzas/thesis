	author = {Struebig, Matthew J. and Fischer, Manuela and Gaveau, David L. A. and Meijaard, Erik and Wich, Serge A. and Gonner, Catherine and Sykes, Rachel and Wilting, Andreas and Kramer-Schadt, Stephanie},
