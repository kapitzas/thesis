@article{kompas_effects_2018,
	title = {The {Effects} of {Climate} {Change} on {GDP} by {Country} and the {Global} {Economic} {Gains} {From} {Complying} {With} the {Paris} {Climate} {Accord}},
	issn = {23284277},
	url = {http://doi.wiley.com/10.1029/2018EF000922},
	doi = {10.1029/2018EF000922},
	abstract = {Computable General Equilibrium (CGE) models are a standard tool for policy analysis and forecasts of economic growth, used by governments throughout the world. Unfortunately, due to computational constraints, many CGE models are dimensionally small, aggregating countries into an often limited set of regions, or using assumptions such as static price level expectations, where next period’s price is conditional only on current or past prices, to limit dimension. This is a concern for climate change modelling, since the eﬀects of global warming by country, in a fully disaggregated and global trade model, are needed, and the known future eﬀects of global warming should be included in forward-looking forecasts for prices and proﬁtability. This work extends a large dimensional intertemporal CGE trade model to account for the various eﬀects of global warming (e.g., loss in agricultural productivity, sea level rise, and health eﬀects) for 140 countries, by decade and over the long term, where producers look forward and adjust price expectations and capital stocks to account for future climate eﬀects. Results are generated in terms of percentage losses in GDP for each country and by various RCP and global temperature changes. The economic gains from complying with the Paris Accord are also estimated, showing that even with a limited set of possible damages from global warming, these potential gains are substantial. For example, with the comparative case of RCP 8.5 (4oC), the global gains from complying with the 2oC target (RCP 4.5), are approximately US\$20,492 billion a year over the long term.},
